{
  "globals": {
    "PROD": true,
    "TEST": true
  },
  "testEnvironment": "jsdom",
  "moduleNameMapper": {
    "\\.(scss|css)$": "identity-obj-proxy"
  },
  "globalSetup": "./__tests__/setupGlobal.ts",
  "setupFilesAfterEnv": [
    "./__tests__/setup.ts",
    "@testing-library/jest-dom/extend-expect"
  ],
  "testMatch": ["**/__tests__/**/?(*.)+(spec|test).[jt]s?(x)"]
}
