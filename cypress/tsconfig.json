{
	"compilerOptions": {
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"noEmit": true,
		"strict": true,
		"target": "es5",
		"lib": ["es6", "dom", "esnext"],
		"types": ["cypress", "@testing-library/cypress", "@percy/cypress"],
		"paths": {
			"@/devalue": ["../src/devalue/index"]
		}
	},
	"include": [
		"**/*.ts",
		"support/index.d.ts",
		"plugins/index.js",
		"../src/devalue/**/*"
	],
	"exclude": ["support/component.tsx"]
}
